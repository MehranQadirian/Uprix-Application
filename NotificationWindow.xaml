<Window x:Class="AppLauncher.NotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None" WindowStartupLocation="CenterOwner"
        AllowsTransparency="True" 
        Background="Transparent"
        ShowInTaskbar="False"
        SizeToContent="WidthAndHeight"
        Topmost="True">
    <Border Background="#274483" CornerRadius="8" Padding="12" Margin="8" >
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <Image x:Name="IconImage" Width="32" Height="32" Margin="0,0,10,0"/>
            <StackPanel>
                <TextBlock x:Name="CaptionBlock" 
                           FontWeight="Black" 
                           Foreground="White" 
                           FontSize="14" FontFamily="Vazirmatn"/>
                <TextBlock x:Name="TextBlock"
                           Foreground="LightGray" 
                           FontSize="12" 
                           TextWrapping="Wrap" FontFamily="Roboto"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
