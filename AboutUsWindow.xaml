<Window x:Class="AppLauncher.AboutUsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppLauncher"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d" Background="#FFe9e9e9"
        Title="AboutUsWindow" Height="550" Width="600" Icon="icon-base.ico">
    <Window.Resources>
        <Style x:Key="PathHoverStyle" TargetType="Path">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=Button}}" 
                     Value="True">
                    <DataTrigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation To="#FF9ACA00"
                                        Duration="0:0:0.3"
                                        Storyboard.TargetProperty="(Path.Fill).(SolidColorBrush.Color)"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </DataTrigger.EnterActions>
                    <DataTrigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation To="#FF454a35"
                                        Duration="0:0:0.3"
                                        Storyboard.TargetProperty="(Path.Fill).(SolidColorBrush.Color)"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </DataTrigger.ExitActions>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="Button" x:Key="IconButton">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="50" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Border.Effect>
                                <DropShadowEffect x:Name="dropShadow" Color="Black" Opacity="0.5" ShadowDepth="0" BlurRadius="1"/>
                            </Border.Effect>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="dropShadow"
                                                             Storyboard.TargetProperty="Opacity"
                                                             To="0.3" Duration="0:0:0.1"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="dropShadow"
                                                             Storyboard.TargetProperty="Opacity"
                                                             To="0" Duration="0:0:0.1"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>
        <Border Background="#FF454a35" CornerRadius="0,0,10,10"/>
        <TextBlock Grid.Row="0"
                   Text="About Us"
                   FontFamily="Segoe UI"
                   VerticalAlignment="Center"
                   Margin="15,0,0,0"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="#FFF"/>

        <Border Grid.Row="1"
                CornerRadius="15"
                Padding="10"
                Margin="15"
                Background="#FFF"
                BorderBrush="#DDDDDD"
                BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition />
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Ellipse Grid.Column="0" Margin="10">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="icon-base.ico"/>
                        </Ellipse.Fill>

                    </Ellipse>
                    <TextBlock Grid.Column="1" Text="Uprix Launcher" FontFamily="Roboto" FontSize="22" FontWeight="Bold" Foreground="#FF454a35"
                               HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0"/>
                </Grid>
                <TextBlock Grid.Row="1" Text="This software has the ability to pull out all the software installed on your Windows, and you can explore your software through the search section and run any software you want by double-clicking on it with the mouse."
                           TextWrapping="Wrap" Foreground="#FF454a35"
                           FontFamily="Roboto" FontSize="18" FontWeight="Medium" FontStyle="Italic" Margin="15,0"/>
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="V2.3.0.1 ©" HorizontalAlignment="Center" VerticalAlignment="Center"
                           Foreground="Gray"/>
                    <TextBlock x:Name="tbStatusUpdate" Grid.Column="1" Text="Update available!" HorizontalAlignment="Center" VerticalAlignment="Center"
                           Foreground="#FF8DB01F" Visibility="Visible"
                               FontWeight="Bold"/>
                </Grid>
            </Grid>
        </Border>
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0,10,0,10"
                    >
            <Button x:Name="btnTelegram" Width="35" Height="35" Margin="0,5,5,5"
                        Style="{StaticResource IconButton}"
                        ToolTip="Open telegram channel"
                        Background="Transparent"
                        Click="btnTelegram_Click">
