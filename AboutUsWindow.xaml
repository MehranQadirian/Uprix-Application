                            Stretch="Uniform" Width="25" Height="25" Fill="#FF454a35" Stroke="#FF00CE12" StrokeThickness="0"
                            Style="{StaticResource PathHoverStyle}"/>
                        <Ellipse x:Name="UpdateNotifEllips"
                            Fill="OrangeRed" Width="5" Height="5"
                            Margin="20,-45,0,0"
                            Visibility="Hidden"/>
                    </StackPanel>
                </Border>
            </Button>
        </StackPanel>
    </Grid>
</Window>
