                </Border>

            </Button>
            <Button x:Name="btnTelephone" Width="35" Height="35" Margin="0,5,5,5"
                        Style="{StaticResource IconButton}"
                        Background="Transparent"
                        ToolTip="Send Gmail to Developer"
                        Click="btnTelephone_Click">

                <Border Width="25" Height="25">
