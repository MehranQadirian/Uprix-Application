                              Stretch="Uniform" Fill="#FF454a35" Stroke="#FF00A9FF" StrokeThickness="0"
                                      Style="{StaticResource PathHoverStyle}"/>
                </Border>
            </Button>
            <Button x:Name="btnGithub" Width="35" Height="35" Margin="0,5,5,5"
                        Style="{StaticResource IconButton}"
                        Background="Transparent"
                        ToolTip="Open application repo"
                        Click="btnGithub_Click">
