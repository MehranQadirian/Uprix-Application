                              Stretch="Uniform" Fill="#FF454a35" StrokeThickness="0"
                                      Style="{StaticResource PathHoverStyle}">
                    </Path>
                </Border>
            </Button>
            <Button x:Name="btnCheckUpdate" Width="35" Height="35" Margin="0,5,5,5"
                        Style="{StaticResource IconButton}"
                        Background="Transparent"
                        ToolTip="Update Application"
                        Click="btnCheckUpdate_Click">
                
