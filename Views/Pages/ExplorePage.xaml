<Page x:Class="AppLauncher.Views.Pages.ExplorePage" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="Explore" FontFamily="Nunito">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Margin="0,0,0,30">
            <TextBlock x:Name="PageTitle" Text="Explore" FontFamily="Nunito" FontSize="42" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock x:Name="PageSubtitle" Text="Discover all features and tools available in Uprix Assistant" FontFamily="Nunito" FontSize="16" Opacity="0.7"/>
        </StackPanel>
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <WrapPanel x:Name="ExploreCardsPanel" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        </ScrollViewer>
    </Grid>
</Page>