<UserControl x:Class="AppLauncher.Views.Controls.LazyLoadingOverlay" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Background="#F5F5F5">
    <UserControl.Resources>
        <QuadraticEase x:Key="QuadraticEaseInOut" EasingMode="EaseInOut"/>
        <CubicEase x:Key="CubicEaseOut" EasingMode="EaseOut"/><!-- Shimmer Gradient Template -->
        <LinearGradientBrush x:Key="ShimmerBrush" StartPoint="0,0" EndPoint="1,0">
            <LinearGradientBrush.Transform>
                <TranslateTransform X="-400"/>
            </LinearGradientBrush.Transform>
            <GradientStop Color="#E0E0E0" Offset="0"/>
            <GradientStop Color="#F0F0F0" Offset="0.3"/>
            <GradientStop Color="#FAFAFA" Offset="0.5"/>
            <GradientStop Color="#F0F0F0" Offset="0.7"/>
            <GradientStop Color="#E0E0E0" Offset="1"/>
        </LinearGradientBrush><!-- Skeleton Tile Style -->
        <Style x:Key="SkeletonTile" TargetType="Border">
            <Setter Property="Width" Value="160"/>
            <Setter Property="Height" Value="160"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#10000000" BlurRadius="8" ShadowDepth="2" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style><!-- Progress Dot Animation -->
        <Storyboard x:Key="DotPulse" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0.3" To="1" Duration="0:0:0.6" AutoReverse="True"/>
        </Storyboard>
    </UserControl.Resources>
    <Grid x:Name="RootGrid" ClipToBounds="True"><!-- Animated Background -->
        <Rectangle x:Name="Backdrop" Fill="#F5F5F5">
            <Rectangle.Effect>
                <BlurEffect Radius="0" x:Name="BackdropBlur"/>
            </Rectangle.Effect>
        </Rectangle><!-- Main Loading Container -->
        <Grid Margin="60,40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="80"/>
            </Grid.RowDefinitions><!-- App Logo/Title Skeleton --><!--<Border BorderBrush="AliceBlue" Grid.Row="0" HorizontalAlignment="Center" BorderThickness="1" Padding="15" Background="#33003554" CornerRadius="15">
                <StackPanel >
                    <Image Source="/Uprix;component/icon-base.ico" Width="80" Height="80" Margin="0,0,0,20"/>
                    <Border Height="24" Width="80" Margin="0,0,0,12" CornerRadius="5" Background="White">
                        <TextBlock Text="Uprix" Foreground="{StaticResource PrimaryBlueColor}" TextAlignment="Center" HorizontalAlignment="Center"
                               VerticalAlignment="Center" FontFamily="Nunito" FontWeight="Heavy" FontSize="20"/>
                    </Border>
                    <Border Height="16" Width="200" Margin="0,0,0,12" CornerRadius="5" Background="White">
                        <TextBlock Text="Please wait..." Foreground="{StaticResource  PrimaryBlueColor}" TextAlignment="Center"/>
                    </Border>
                </StackPanel>
            </Border>--><!-- Search Bar Skeleton -->
            <Border x:Name="brSearch" Grid.Row="1" Height="40" MinWidth="500" CornerRadius="20" Background="White" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Border.Effect>
                    <DropShadowEffect Color="#10000000" BlurRadius="8" ShadowDepth="2" Opacity="0.2"/>
                </Border.Effect>
                <Rectangle x:Name="rectangle1" Margin="15,10" RadiusX="4" RadiusY="4" Fill="{DynamicResource PrimaryBlueColor}"/>
            </Border><!-- App Tiles Grid -->
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Disabled">
                <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Top"><!-- Skeleton Tile 1 -->
                    <Border x:Name="brCard1" Style="{StaticResource SkeletonTile}">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Ellipse x:Name="ellips1" Width="56" Height="56" Margin="0,0,0,16" Fill="{DynamicResource PrimaryBlueColor}"/>
                            <Rectangle x:Name="rectangle2" Height="14" Width="110" RadiusX="4" RadiusY="4" Margin="0,0,0,8" Fill="{DynamicResource PrimaryBlueColor}"/>
                            <Rectangle x:Name="rectangle3" Height="10" Width="70" RadiusX="3" RadiusY="3" Fill="{DynamicResource PrimaryBlueColor}"/>
                        </StackPanel>
                    </Border><!-- Repeat for tiles 2-12 -->
                    <Border x:Name="brCard2" Style="{StaticResource SkeletonTile}">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Ellipse x:Name="ellips2" Width="56" Height="56" Margin="0,0,0,16" Fill="{DynamicResource PrimaryBlueColor}"/>
                            <Rectangle x:Name="rectangle4" Height="14" Width="110" RadiusX="4" RadiusY="4" Margin="0,0,0,8" Fill="{DynamicResource PrimaryBlueColor}"/>
                            <Rectangle x:Name="rectangle5" Height="10" Width="70" RadiusX="3" RadiusY="3" Fill="{DynamicResource PrimaryBlueColor}"/>
                        </StackPanel>
                    </Border>
                    <Border x:Name="brCard3" Style="{StaticResource SkeletonTile}">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Ellipse x:Name="ellips3" Width="56" Height="56" Margin="0,0,0,16" Fill="{DynamicResource PrimaryBlueColor}"/>
                            <Rectangle x:Name="rectangle6" Height="14" Width="110" RadiusX="4" RadiusY="4" Margin="0,0,0,8" Fill="{DynamicResource PrimaryBlueColor}"/>
                            <Rectangle x:Name="rectangle7" Height="10" Width="70" RadiusX="3" RadiusY="3" Fill="{DynamicResource PrimaryBlueColor}"/>
                        </StackPanel>
                    </Border>
                    <Border x:Name="brCard4" Style="{StaticResource SkeletonTile}">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Ellipse x:Name="ellips4" Width="56" Height="56" Margin="0,0,0,16" Fill="{DynamicResource PrimaryBlueColor}"/>
                            <Rectangle x:Name="rectangle8" Height="14" Width="110" RadiusX="4" RadiusY="4" Margin="0,0,0,8" Fill="{DynamicResource PrimaryBlueColor}"/>
                            <Rectangle x:Name="rectangle9" Height="10" Width="70" RadiusX="3" RadiusY="3" Fill="{DynamicResource PrimaryBlueColor}"/>
                        </StackPanel>
                    </Border><!-- Add 10 more identical tiles here for a complete grid -->
                </WrapPanel>
            </ScrollViewer>
            <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Disabled">
                <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Top"><!-- Skeleton Tile 1 -->
                    <Border x:Name="brCard5" Style="{StaticResource SkeletonTile}">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Ellipse x:Name="ellips5" Width="56" Height="56" Margin="0,0,0,16" Fill="{DynamicResource PrimaryBlueColor}"/>
                            <Rectangle x:Name="rectangle10" Height="14" Width="110" RadiusX="4" RadiusY="4" Margin="0,0,0,8" Fill="{DynamicResource PrimaryBlueColor}"/>
                            <Rectangle x:Name="rectangle11" Height="10" Width="70" RadiusX="3" RadiusY="3" Fill="{DynamicResource PrimaryBlueColor}"/>
                        </StackPanel>
                    </Border><!-- Repeat for tiles 2-12 -->
                    <Border x:Name="brCard6" Style="{StaticResource SkeletonTile}">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Ellipse x:Name="ellips6" Width="56" Height="56" Margin="0,0,0,16" Fill="{DynamicResource PrimaryBlueColor}"/>
                            <Rectangle x:Name="rectangle12" Height="14" Width="110" RadiusX="4" RadiusY="4" Margin="0,0,0,8" Fill="{DynamicResource PrimaryBlueColor}"/>
                            <Rectangle x:Name="rectangle13" Height="10" Width="70" RadiusX="3" RadiusY="3" Fill="{DynamicResource PrimaryBlueColor}"/>
                        </StackPanel>
                    </Border>
                    <Border x:Name="brCard7" Style="{StaticResource SkeletonTile}">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Ellipse x:Name="ellips7" Width="56" Height="56" Margin="0,0,0,16" Fill="{DynamicResource PrimaryBlueColor}"/>
                            <Rectangle x:Name="rectangle14" Height="14" Width="110" RadiusX="4" RadiusY="4" Margin="0,0,0,8" Fill="{DynamicResource PrimaryBlueColor}"/>
                            <Rectangle x:Name="rectangle15" Height="10" Width="70" RadiusX="3" RadiusY="3" Fill="{DynamicResource PrimaryBlueColor}"/>
                        </StackPanel>
                    </Border>
                    <Border x:Name="brCard8" Style="{StaticResource SkeletonTile}">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Ellipse x:Name="ellips8" Width="56" Height="56" Margin="0,0,0,16" Fill="{DynamicResource PrimaryBlueColor}"/>
                            <Rectangle x:Name="rectangle16" Height="14" Width="110" RadiusX="4" RadiusY="4" Margin="0,0,0,8" Fill="{DynamicResource PrimaryBlueColor}"/>
                            <Rectangle x:Name="rectangle17" Height="10" Width="70" RadiusX="3" RadiusY="3" Fill="{DynamicResource PrimaryBlueColor}"/>
                        </StackPanel>
                    </Border><!-- Add 10 more identical tiles here for a complete grid -->
                </WrapPanel>
            </ScrollViewer><!-- Status Bar -->
            <StackPanel Grid.Row="4" VerticalAlignment="Center" HorizontalAlignment="Center"><!-- Loading Dots -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,12">
                    <Ellipse x:Name="Dot1" Width="8" Height="8" Fill="#666666" Margin="4" Opacity="0.3"/>
                    <Ellipse x:Name="Dot2" Width="8" Height="8" Fill="#666666" Margin="4" Opacity="0.3"/>
                    <Ellipse x:Name="Dot3" Width="8" Height="8" Fill="#666666" Margin="4" Opacity="0.3"/>
                </StackPanel><!-- Status Text -->
                <TextBlock x:Name="StatusText" Text="Loading applications..." FontSize="14" FontWeight="Medium" Foreground="#666666" HorizontalAlignment="Center" Opacity="0.8"/><!-- Progress Indicator -->
                <Border x:Name="brProgressBar" Height="3" Width="200" Background="#E0E0E0" CornerRadius="2" Margin="0,12,0,0">
                    <Rectangle x:Name="ProgressBar" Fill="#4A90E2" HorizontalAlignment="Left" Width="0" RadiusX="2" RadiusY="2"/>
                </Border>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>