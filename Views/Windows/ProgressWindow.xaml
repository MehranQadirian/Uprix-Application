<Window x:Class="AppLauncher.Views.Windows.ProgressWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" Title="Loading Apps" Width="480" Height="220" WindowStartupLocation="CenterScreen" WindowStyle="None" ResizeMode="NoResize" AllowsTransparency="True" Background="Transparent">
    <Window.Triggers><!-- Entrance: soft fade/scale -->
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.25"/>
                    <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" From="0.98" To="1" Duration="0:0:0.25"/>
                    <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" From="0.98" To="1" Duration="0:0:0.25"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger><!-- Gentle gradient shift for liveliness -->
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard>
                <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                    <ColorAnimation Storyboard.TargetName="gs1" Storyboard.TargetProperty="Color" To="#FFFFFF" Duration="0:0:4"/>
                    <ColorAnimation Storyboard.TargetName="gs2" Storyboard.TargetProperty="Color" To="#AAAAAA" Duration="0:0:4"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers><!-- ========== Resources / Styles ========== -->
    <Window.Resources><!-- Subtle brand palette -->
        <SolidColorBrush x:Key="BrandBg1">#F6F7F9</SolidColorBrush>
        <Color x:Key="BrandBg3">#F6F7F9</Color>
        <Color x:Key="BrandBg4">#EDEFF5</Color>
        <SolidColorBrush x:Key="BrandBg2">#EDEFF5</SolidColorBrush>
        <SolidColorBrush x:Key="BrandAccent">#FF5A7A</SolidColorBrush>
        <SolidColorBrush x:Key="BrandAccent2">#4F86F7</SolidColorBrush>
        <SolidColorBrush x:Key="TextPrimary">#1A1D29</SolidColorBrush>
        <SolidColorBrush x:Key="TextSecondary">#5A6275</SolidColorBrush><!-- Animated gradient for the card background --><!--
        <LinearGradientBrush x:Key="CardBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="{StaticResource BrandBg3}" Offset="0" x:Name="gs1"/>
            <GradientStop Color="{StaticResource BrandBg4}" Offset="1" x:Name="gs2"/>
        </LinearGradientBrush>--><!-- Drop shadow helper -->
        <DropShadowEffect x:Key="SoftShadow" Color="#1A1D29" BlurRadius="24" ShadowDepth="0" Opacity="0.25"/><!-- Close button style -->
        <Style x:Key="IconButton" TargetType="Button">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="#00000000"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid RenderTransformOrigin="0.5,0.5">
                            <Grid.RenderTransform>
                                <ScaleTransform x:Name="scaleTransform" ScaleX="1" ScaleY="1"/>
                            </Grid.RenderTransform>
                            <Border x:Name="hoverBg" Background="#14000000" CornerRadius="8" Opacity="0"/>
                            <Path Data="M90.914,5.296c6.927-7.034,18.188-7.065,25.154-0.068 c6.961,6.995,6.991,18.369,0.068,25.397L85.743,61.452l30.425,30.855c6.866,6.978,6.773,18.28-0.208,25.247 c-6.983,6.964-18.21,6.946-25.074-0.031L60.669,86.881L30.395,117.58c-6.927,7.034-18.188,7.065-25.154,0.068 c-6.961-6.995-6.992-18.369-0.068-25.397l30.393-30.827L5.142,30.568c-6.867-6.978-6.773-18.28,0.208-25.247 c6.983-6.963,18.21-6.946,25.074,0.031l30.217,30.643L90.914,5.296L90.914,5.296z" Stretch="Uniform" Margin="5" Fill="Gray"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="hoverBg" Property="Opacity" Value="1"/>
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="scaleTransform" Storyboard.TargetProperty="ScaleX" To="1.06" Duration="0:0:0.1"/>
                                            <DoubleAnimation Storyboard.TargetName="scaleTransform" Storyboard.TargetProperty="ScaleY" To="1.06" Duration="0:0:0.1"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="scaleTransform" Storyboard.TargetProperty="ScaleX" To="1" Duration="0:0:0.1"/>
                                            <DoubleAnimation Storyboard.TargetName="scaleTransform" Storyboard.TargetProperty="ScaleY" To="1" Duration="0:0:0.1"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="scaleTransform" Storyboard.TargetProperty="ScaleX" To="0.96" Duration="0:0:0.05"/>
                                            <DoubleAnimation Storyboard.TargetName="scaleTransform" Storyboard.TargetProperty="ScaleY" To="0.96" Duration="0:0:0.05"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="scaleTransform" Storyboard.TargetProperty="ScaleX" To="1.06" Duration="0:0:0.05"/>
                                            <DoubleAnimation Storyboard.TargetName="scaleTransform" Storyboard.TargetProperty="ScaleY" To="1.06" Duration="0:0:0.05"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style><!-- Minimal, rounded ProgressBar with animated indicator -->
        <Style x:Key="MinimalProgressBar" TargetType="ProgressBar">
            <Setter Property="Height" Value="10"/>
            <Setter Property="Foreground" Value="{DynamicResource BrandAccent2}"/>
            <Setter Property="Background" Value="#14000000"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Grid x:Name="Root" ClipToBounds="True">
                            <Border Background="{TemplateBinding Background}" CornerRadius="6"/>
                            <Border x:Name="IndeterminateBar" Background="{TemplateBinding Foreground}" CornerRadius="6" Width="120" Height="10" Opacity="0.9">
                                <Border.RenderTransform>
                                    <TranslateTransform X="-160"/>
                                </Border.RenderTransform>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsIndeterminate" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever">
                                            <DoubleAnimation Storyboard.TargetName="IndeterminateBar" Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)" From="-160" To="520" Duration="0:0:1.6"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources><!-- ========== Root Card ========== -->
    <Grid MouseDown="DragThumb_MouseDown">
        <Border CornerRadius="18" Padding="18">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop x:Name="gs1" Color="{StaticResource BrandBg3}" Offset="0"/>
                    <GradientStop x:Name="gs2" Color="{StaticResource BrandBg4}" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background><!--<Border.Effect>
                <DropShadowEffect Color="#1A1D29" BlurRadius="24" ShadowDepth="0" Opacity="0.25"/>
            </Border.Effect>--><!-- Animate the gradient stops here -->
            <Border.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                            <ColorAnimation Storyboard.TargetName="gs1" Storyboard.TargetProperty="Color" To="#FFFFFFFF" Duration="0:0:4"/>
                            <ColorAnimation Storyboard.TargetName="gs2" Storyboard.TargetProperty="Color" To="#FFEFEFEF" Duration="0:0:4"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Border.Triggers>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions><!-- Title bar (draggable) -->
                <Grid Grid.Row="0" Height="40" Margin="2,0,2,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions><!-- App glyph -->
                    <Grid Width="24" Height="24" VerticalAlignment="Center" Margin="5,0,0,0"><!-- Arc مشابه 25% دایره -->
                        <Path Stroke="{DynamicResource BrandAccent2}" StrokeThickness="3" StrokeStartLineCap="Round" StrokeEndLineCap="Round" Data="M12,2 A10,10 0 0 1 22,12" RenderTransformOrigin="0.5,0.5">
                            <Path.RenderTransform>
                                <RotateTransform x:Name="ringRotate" Angle="0"/>
                            </Path.RenderTransform>
                        </Path><!-- چرخش مدام -->
                        <Grid.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetName="ringRotate" Storyboard.TargetProperty="Angle" From="0" To="360" Duration="0:0:0.3"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Grid.Triggers>
                    </Grid>
                    <TextBlock Margin="20,0,0,0" Grid.Column="1" Text="Loading Applications" Foreground="{DynamicResource TextPrimary}" FontSize="16" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    <Button Grid.Column="2" x:Name="BtnClose" Style="{StaticResource IconButton}" Click="BtnClose_Click" ToolTip="Close"/>
                </Grid><!-- Content -->
                <StackPanel Grid.Row="1" Margin="6,0,6,6" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                        <TextBlock x:Name="StatusText" Text="Loading..." FontSize="18" Foreground="{DynamicResource TextPrimary}"/>
                        <TextBlock Text=" " FontSize="18"/><!-- Animated dots next to status text -->
                        <TextBlock x:Name="Dots" FontSize="18" Foreground="{DynamicResource TextSecondary}">
                            <TextBlock.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever">
                                            <StringAnimationUsingKeyFrames Storyboard.TargetProperty="Text" RepeatBehavior="Forever">
                                                <DiscreteStringKeyFrame KeyTime="0:0:0.0" Value="."/>
                                                <DiscreteStringKeyFrame KeyTime="0:0:0.3" Value=".."/>
                                                <DiscreteStringKeyFrame KeyTime="0:0:0.6" Value="..."/>
                                                <DiscreteStringKeyFrame KeyTime="0:0:0.9" Value=""/>
                                            </StringAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </TextBlock.Triggers>
                        </TextBlock>
                    </StackPanel>
                    <ProgressBar IsIndeterminate="True" Style="{StaticResource MinimalProgressBar}"/><!-- Tiny helper line that fades in/out -->
                    <TextBlock Text="Please wait while we index your apps…" Opacity="0.7" Margin="0,10,0,0" HorizontalAlignment="Center" Foreground="{DynamicResource TextSecondary}">
                        <TextBlock.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0.2" To="1" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </TextBlock.Triggers>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>